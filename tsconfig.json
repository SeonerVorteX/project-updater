{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./dist/",
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": "./dist",
        "incremental": true,
        "strict": true,
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
        "skipLibCheck": true,
        "lib": ["ES2021"]  
    },
    "exclude": [
        "node_modules",
        "tests/"
    ]
}